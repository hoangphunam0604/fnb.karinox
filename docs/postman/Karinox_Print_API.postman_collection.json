      "name": "üñ®Ô∏è Print Queue Management",
      "item": [
        {
          "name": "Get Print Queue",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Branch-ID",
                "value": "{{branch_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/print/queue?device_id=printer_001&status=pending&limit=20",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "print",
                "queue"
              ],
              "query": [
                {
                  "key": "device_id",
                  "value": "printer_001"
                },
                {
                  "key": "status",
                  "value": "pending"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Update Job Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Branch-ID",
                "value": "{{branch_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\",\n  \"error_message\": null\n}"
            },
            "url": {
              "raw": "{{base_url}}/print/queue/1001/status",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "print",
                "queue",
                "1001",
                "status"
              ]
            }
